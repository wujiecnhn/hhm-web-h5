<div class="page-group">
    <div id="page-my-account" class="page page-current">
        <div class="content native-scroll" v-cloak>
            <div class="list-block my-0-mar">
                <ul>
                    <li class="item-content item-link" style="position: relative;">
                        <input accept="image/*" type="file" id="linkHeader" title="请选择头像" class="head-img"/>
                        <div class="item-inner">
                            <div class="item-title">店铺头像</div>
                            <div class="item-after my-div-account">
                                <img id="headImg" :src="headPic" alt="" />
                            </div>
                        </div>
                    </li>
                    <li id="linkName" class="item-content item-link">
                        <div class="item-inner">
                            <div class="item-title">店铺名称 </div>
                            <div class="item-after">${storeName}</div>
                        </div>
                    </li>
                    <li id="linkAddress" class="item-content item-link">
                        <div class="item-inner">
                            <div class="item-title">地址管理 </div>
                            <div class="item-after"></div>
                        </div>
                    </li>
                    <li id="linkPassword" class="item-content item-link">
                        <div class="item-inner">
                            <div class="item-title">修改密码 </div>
                            <div class="item-after"></div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="content-padded">
                <p class="my-50-mar"><a href="/logout" class="button button-fill button-big external">退出登录</a></p>
            </div>
        </div>
    </div>
</div>
